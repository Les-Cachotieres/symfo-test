<!DOCTYPE html>
<html>
    <head>
        <meta charset="UTF-8">
        <title>{% block title %}Welcome!{% endblock %}</title>
        {# Run `composer require symfony/webpack-encore-bundle`
           and uncomment the following Encore helpers to start using Symfony UX #}
        {% block stylesheets %}
        <link rel="stylesheet" type="text/css" href="https://cdn.jsdelivr.net/npm/bootstrap@4.5.3/dist/css/bootstrap.min.css">
        <link rel="preconnect" href="https://fonts.gstatic.com">
<link href="https://fonts.googleapis.com/css2?family=Montserrat:wght@100;300;600;700&display=swap" rel="stylesheet">
            {#{{ encore_entry_link_tags('app') }}#}

  <style>
  
@import url('https://fonts.googleapis.com/css2?family=Raleway:wght@100;300&display=swap');


  h1 {
    font-family: 'Montserrat', bold, sans-serif;
    color: #f3a29e;
  }

  a {
    color: #f3a29e;
    font-family: 'Montserrat', bold, sans-serif;
  }

  #welcome {
    color: #f3a29e;
    font-family: 'Montserrat', bold, sans-serif;
  }

  td {
    font-family: 'Raleway', sans-serif;
  }
.btn {
  background-color: #f3a29e !important;
  border-color: #f3a29e ;
  color: white;
}
  </style>
        {% endblock %}

        {% block javascripts %}
            {#{{ encore_entry_script_tags('app') }}#}
        {% endblock %}
    </head>
    <body>
    <nav class="navbar navbar-expand-lg">
  <button class="navbar-toggler" type="button" data-toggle="collapse" data-target="#navbarSupportedContent" aria-controls="navbarSupportedContent" aria-expanded="false" aria-label="Toggle navigation">
    <span class="navbar-toggler-icon"></span>
  </button>

  <div class="collapse navbar-collapse" id="navbarSupportedContent">
    <ul class="navbar-nav mr-auto">
    {% if app.user %}
    <li class="nav-item">
        <a class="nav-link" href="/">Accueil</a>
      </li>
      <li class="nav-item">
        <a class="nav-link" href="/customer">Les clients</a>
      </li>
      <li class="nav-item">
        <a class="nav-link" href="/place">Les lieux</a>
      </li>
       <li class="nav-item">
        <a class="nav-link" href="/appointment">Les rendez-vous</a>
      </li>

    </ul>

    {% else %}

    <li class="nav-item">
        <a class="nav-link" href="/">Accueil</a>
      </li>
    </ul>
      {% endif %}
    <form class="form-inline my-2 my-lg-0">
    {% if app.user %}

      Bonjour {{ app.user.username }}, <a class="nav-link" href="/logout">Deconnexion</a>

    {% else %}

      <a class="nav-link" href="/">Connexion</a>
      <a class="nav-link" href="/register">Inscription</a>
    {% endif %}
    </form>
  </div>
</nav>
        {% block body %}{% endblock %}
    </body>
</html>
