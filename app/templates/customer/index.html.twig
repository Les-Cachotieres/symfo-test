{% extends 'base.html.twig' %}

{% block title %}Clientele{% endblock %}

{% block body %}
    <h1 class="mt-3">Liste des client(e)s</h1>

    <table class="table">
        <thead>
            <tr>
                <th>Pr√©nom</th>
                <th>Nom</th>
                <th>Date de naissance</th>
                <th>Creer le</th>
            </tr>
        </thead>
        <tbody>
        {% for customer in customers %}
            <tr>
                <td>{{ customer.firstname }}</td>
                <td>{{ customer.lastname }}</td>
                <td>{{ customer.birthday ? customer.birthday|date('Y-m-d') : '' }}</td>
                <td>{{ customer.createdAt ? customer.createdAt|date('Y-m-d H:i:s') : '' }}</td>
                <td>
                    <a class="btn btn-primary" href="{{ path('customer_edit', {'id': customer.id}) }}">modifier</a>
                </td>
            </tr>
        {% else %}
            <tr>
                <td colspan="6">no records found</td>
            </tr>
        {% endfor %}
        </tbody>
    </table>

    <a class="btn btn-primary" href="{{ path('customer_new') }}">Ajouter</a>
{% endblock %}
